Algoritmo "Somador"

// soma de valores com o comando ENQUANTO

Var

   N, S: inteiro
   resp: caractere
   
Inicio

      S <- 0
      resp <- "S"
      Enquanto (resp = "S") faca
               Escreva ("Digite o valor: ")
               Leia (N)
               S <- S + N
               Escreva ("Você quer continuar? [S/N] ")
               Leia (resp)
      fimEnquanto

      escreva("A soma de todos os valores digitados é", s)

fimAlgoritmo