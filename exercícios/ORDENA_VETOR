algoritmo "OrdenaVetor"

// teste com ORDENAVETOR e pr√°tica de como utilizar vetores

var
  v: vetor[1..10] de Inteiro
  c: Inteiro
Procedimento OrdenaVetor()
var
   i, j, aux: Inteiro
inicio
   Para i <- 1 ate 9 faca // total de casas -1
      Para j <- i+1 ate 10 faca
         Se (v[i] > v[j]) entao //realiza troca se o anterior for + q posterior
            aux <- v[i]
            v[i] <- v[j]
            v[j] <- aux
         FimSe
      FimPara
   FimPara
FimProcedimento
Fimalgoritmo
