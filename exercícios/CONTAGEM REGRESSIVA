Algoritmo "contagem_regressiva"

Var

   contador: inteiro
   
Inicio

      escreva("Qual número deseja começar a contagem regressiva? ")
      leia(contador)
      escreval

      enquanto (contador >= 0) faca
         escreva (contador, "  ")
         contador <- contador -1
      fimEnquanto

      escreval
      escreva ("Contador Finalizado!")
      
fimAlgoritmo