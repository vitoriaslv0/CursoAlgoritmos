Algoritmo "Somador"

// Soma de valores com o comando REPITA

Var

   N, S: inteiro
   resp: caractere
   
Inicio

      S <- 0
      Repita
         Escreva ("Digite o valor: ")
         Leia (N)
         S <- S + N
         Escreva ("Você quer continuar? [S/N] ")
         Leia (resp)
      Ate (resp = "N")

      escreva("A soma de todos os valores digitados é", s)
      
fimAlgoritmo